{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "bundler",
    "target": "es2022",
    "verbatimModuleSyntax": true,
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": false,
    "isolatedModules": true,
    "noImplicitAny": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitReturns": true,
    "noImplicitThis": true
  },
  "include": ["./src/**/*"]
}
