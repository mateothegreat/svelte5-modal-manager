{
  "compilerOptions": {
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strictNullChecks": false,
    "sourceMap": true,
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": true,
    "isolatedModules": true,
    "strict": true,
    "noEmit": true,
    "moduleResolution": "bundler",
    "paths": {
      "@mateothegreat/svelte5-modal-manager": [
        "../src/lib/index.ts"
      ],
      "@mateothegreat/svelte5-modal-manager/*": [
        "../src/lib/*"
      ]
    }
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.svelte"
  ]
}